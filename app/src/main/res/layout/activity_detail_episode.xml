<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetailEpisodeActivity">

    <ImageView
        android:id="@+id/podcast_detail_episode_image"
        android:layout_width="73dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintBottom_toTopOf="@+id/podcast_detail_episode_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/podcast_detail_episode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="554dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/podcast_detail_episode_image"
        app:layout_constraintTop_toBottomOf="@+id/podcast_detail_episode_author" />

    <TextView
        android:id="@+id/podcast_detail_episode_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/podcast_detail_episode_title"
        app:layout_constraintStart_toStartOf="@+id/podcast_detail_episode_image"
        app:layout_constraintTop_toBottomOf="@+id/podcast_detail_episode_image" />
</androidx.constraintlayout.widget.ConstraintLayout>